<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_sms_retriever_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        android:text="@string/sms_retriever_api"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_sms_user_consent_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        android:text="@string/sms_user_consent_api"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/tv_otp_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:padding="16dp"
        android:text="@string/otp_to_set" />

</LinearLayout>